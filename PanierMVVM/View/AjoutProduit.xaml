<Window x:Class="PanierMVVM.View.AjoutProduit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PanierMVVM.View"
        mc:Ignorable="d"
        Title="AjoutProduit" Height="216.186" Width="285.792">
    <Grid>
        <Label Content="Label :" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Margin="24,26,0,0" VerticalAlignment="Top" Width="42"/>
        <Label Content="Prix :" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Margin="24,79,0,0" VerticalAlignment="Top" Width="42"/>
        <Button Content="Ajouter le produit" HorizontalAlignment="Left" Margin="24,145,0,0" VerticalAlignment="Top" Width="226" Click="Button_Click"/>
        <TextBox x:Name="label" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="26" Margin="71,26,0,0" TextWrapping="Wrap" Text="{Binding Label}" VerticalAlignment="Top" Width="179"/>
        <TextBox x:Name="prix" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="26" Margin="71,79,0,0" TextWrapping="Wrap" Text="{Binding Prix}" VerticalAlignment="Top" Width="179"/>
    </Grid>
</Window>
